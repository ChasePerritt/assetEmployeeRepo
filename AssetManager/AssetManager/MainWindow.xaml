<Window x:Class="AssetManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssetManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF4E7389">
    <Grid x:Name="MainGrid" Margin="0,0,0,-2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="TextView" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="232" Width="314" Background="White"><Run Text=""/><LineBreak/><Run/></TextBlock>
        <Button x:Name="SeeAssetsButton" Grid.ColumnSpan="3" Content="See Assets" HorizontalAlignment="Left" Margin="340,10,0,0" VerticalAlignment="Top" Width="75" Click="SeeAssetsButton_Click"/>
        <Button x:Name="SeeEmployeesButton" Grid.ColumnSpan="3" Content="See Employees" HorizontalAlignment="Left" Margin="340,44,0,0" VerticalAlignment="Top" Width="101" Click="SeeEmployeesButton_Click"/>

    </Grid>
</Window>
